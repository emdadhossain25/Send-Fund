<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SendFund" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@color/background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/circular_font_std</item>
        <item name="android:fontFamily">@font/circular_font_std</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.SendFund.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/background_color</item>
        <item name="android:titleTextAppearance">@style/SendFundTitleText</item>
    </style>

    <style name="SendFundTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:title">Send Fund</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/circular_font_std</item>
        <item name="fontFamily">@font/circular_font_std</item>
    </style>
</resources>